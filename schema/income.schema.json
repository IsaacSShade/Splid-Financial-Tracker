{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "income.schema.json",
  "title": "Income Config",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "monthString": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$",
      "description": "Calendar month in YYYY-MM format.",
      "examples": [
        "2025-09",
        "2025-10"
      ]
    },
    "nonNegativeNumber": {
      "type": "number",
      "minimum": 0
    }
  },
  "properties": {
    "hourlyRate": {
      "$ref": "#/definitions/nonNegativeNumber",
      "description": "Your pay per hour (USD).",
      "examples": [
        50
      ]
    },
    "defaultWeeklyHours": {
      "$ref": "#/definitions/nonNegativeNumber",
      "default": 10,
      "description": "Hours assumed for each work week when no monthly override is provided."
    },
    "startDate": {
      "type": "string",
      "format": "date",
      "description": "YYYY-MM-DD. Months strictly before this date have income = 0.",
      "examples": [
        "2025-09-01"
      ]
    },
    "hoursOverrides": {
      "type": "object",
      "description": "Optional total hours worked per calendar month. If present for a month, income = hourlyRate * hoursOverrides[month].",
      "propertyNames": {
        "$ref": "#/definitions/monthString"
      },
      "additionalProperties": {
        "$ref": "#/definitions/nonNegativeNumber"
      },
      "examples": [
        {
          "2025-09": 30,
          "2025-10": 40
        }
      ]
    }
  },
  "required": [
    "hourlyRate",
    "defaultWeeklyHours",
    "startDate"
  ],
  "examples": [
    {
      "hourlyRate": 50,
      "defaultWeeklyHours": 10,
      "startDate": "2025-09-01",
      "hoursOverrides": {
        "2025-09": 30
      }
    }
  ]
}