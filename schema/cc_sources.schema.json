{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "cc_sources.schema.json",
  "title": "Credit Card Sources Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "pdfStatementsGlob": {
      "type": "string",
      "minLength": 1,
      "description": "Glob path to BoA PDF statements."
    },
    "usePostingDateForMonth": {
      "type": "boolean",
      "description": "If true, assign each transaction to the calendar month of its Posting Date.",
      "default": true
    }
  },
  "required": [
    "pdfStatementsGlob",
    "usePostingDateForMonth"
  ]
}